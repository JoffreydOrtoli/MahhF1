<%- include('./partials/header') %>
    <form action="/backoffice/newRace" method="post">
        <% for (const driver of drivers) { %>
            <div class="form_driver">
                <div class="form_test"><%= driver.name %></div>
                <input class="form_input" type="text" name="driver_id" readonly="readonly" value="<%= driver.id %>">
                <input class="form_input" type="text" name="circuit_id" placeholder="id circuit">
                <input class="form_input" type="text" name="team_id" readonly="readonly" value="<%= driver.team_id %>">
                <input class="form_input" type="text" name="best_lap" value="false">
                <input class="form_input" type="text" name="date" placeholder="date">
                <input class="form_input" type="number" name="ranking" placeholder="position">
            </div>
        <% } %>
        <input type="submit" value="Valider">
    </form>
<%- include('./partials/footer') %>